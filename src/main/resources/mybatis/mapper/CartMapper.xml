<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.ysu.model.dao.cartDAO">

    <select id="CartList" resultType="com.example.ysu.model.dto.cartDTO">
        SELECT m.menu_name, m.menu_price, m.menu_corner,m.menu_image,  c.*
        FROM menu m
        INNER JOIN cart c
        ON m.menu_id = c.menu_id
        and c.u_id=2023200009;
    </select>
    <delete id="CartDelete">
        DELETE FROM cart
        WHERE menu_id = #{menu_id};
    </delete>

</mapper>